<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.example.gf.giftfriend.FinishLogin"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to GiftFriend"
        android:textSize="30dp"
        android:id="@+id/textView13"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout6"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="加入好友"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:gravity="fill_vertical"
                android:id="@+id/btn_add"
                android:drawableLeft="@drawable/ic_addfriend"
                android:drawablePadding="50dp"
                android:background="@drawable/btn_style"
                android:paddingLeft="8dp"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="掃描"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:gravity="fill_vertical"
                android:id="@+id/btn_scan"
                android:drawableLeft="@drawable/ic_sanner"
                android:drawablePadding="50dp"
                android:background="@drawable/button_layout"
                android:paddingLeft="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="上傳"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:gravity="fill_vertical"
                android:id="@+id/btn_upload"
                android:drawableLeft="@drawable/ic_cloud"
                android:drawablePadding="50dp"
                android:background="@drawable/button_layout"
                android:paddingLeft="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="歷史紀錄"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:gravity="fill_vertical"
                android:id="@+id/btn_record"
                android:drawableLeft="@drawable/ic_history"
                android:drawablePadding="50dp"
                android:background="@drawable/button_layout"
                android:paddingLeft="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="網頁介紹"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:gravity="fill_vertical"
                android:id="@+id/btn_page"
                android:drawableLeft="@drawable/ic_global"
                android:drawablePadding="50dp"
                android:background="@drawable/button_layout"
                android:paddingLeft="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="下載"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:gravity="fill_vertical"
                android:id="@+id/btn_download"
                android:background="@drawable/button_layout"
                android:drawablePadding="50dp"
                android:drawableLeft="@drawable/ic_download"
                android:paddingLeft="8dp"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>



